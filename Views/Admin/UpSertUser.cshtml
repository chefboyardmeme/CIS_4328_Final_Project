@model UNFBusShuttle.Models.User
@{
    ViewBag.Title = "Add / Edit User Details";
}

@section scripts {

    <script type="text/javascript">

        $(function() {

            //

        });

    </script>

}

    @section styles {

    <style type="text/css">

        /**/

    </style>

}

    <div class="row">
        <div class="col-md-6">
            <h2>Add  / Edit User Details</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    User Details
                </div>
                @using (Html.BeginForm("UpSertUser", "Admin", FormMethod.Post))
                {
                    <div class="panel-body">

                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(model => model.Id)                        
                        @*@Html.HiddenFor(model => model.IsAdmin)*@
                        @Html.HiddenFor(model => model.DateAdded)
                        @Html.HiddenFor(model => model.AddedBy)
                        @Html.HiddenFor(model => model.DateUpdated)
                        @Html.HiddenFor(model => model.UpdatedBy)

                        <div class="form-group">
                            <label>User Id</label>
                            @if (Model != null && Model.Id  > 0)
                            {
                                @Html.HiddenFor(model => model.UserId)
                                @Html.TextBoxFor(model => model.UserId, new { @class = "form-control", @disabled = "disabled" })   
                            }
                            else
                            {
                                @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", required = "required" }})                                
                            }                        
                        </div>

                        <div class="form-group">
                            <label>Password</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", required = "required" }})
                        </div>

                        <div class="form-group">
                            <label>First Name</label>
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", required = "required" }})
                        </div>

                        <div class="form-group">
                            <label>Last Name</label>
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", required = "required" }})
                        </div>

                        <div class="form-group">
                            <label>Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @type = "email" }})
                        </div>

                        <div class="form-group">
                            <label>User Type</label>
                            <select class="form-control" name="UserType" id="UserType">
                                @if (Model != null && Model.UserType.ToLower() == "driver")
                                {
                                    <option value="Driver" selected>Driver</option>
                                }
                                else
                                {
                                    <option value="Driver">Driver</option>
                                }
                            
                                @if (Model != null && Model.UserType.ToLower() == "rider")
                                {
                                     <option value="Rider" selected>Rider</option>
                                }
                                else
                                {
                                    <option value="Rider">Rider</option>
                                }

                                @*@if (Model != null && Model.UserType.ToLower() == "admin")
                                {
                                     <option value="Admin" selected>Admin</option>
                                }
                                else
                                {
                                    <option value="Admin">Admin</option>
                                }    *@                                                            
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Is Active?</label>
                             <select class="form-control" name="UserStatus" id="UserStatus">
                                @if (Model != null && Model.IsActive == true)
                                {
                                    <option value="Active" selected>Active</option>
                                }
                                else
                                {
                                    <option value="Active">Active</option>
                                }
                            
                                @if (Model != null && Model.IsActive == false)
                                {
                                     <option value="InActive" selected>InActive</option>
                                }
                                else
                                {
                                    <option value="InActive">InActive</option>
                                }                                                                                               
                            </select>
                        </div>

                    </div>
                    <div class="panel-footer">
                        <button type="submit" class="btn btn-primary" title="Save User Details"> Save</button>
                    </div>
                }

        </div>
    </div>
</div>